.container{
    flex-direction: column;
}
.user-c{
    width: 100%;
    height: 400rpx;
    background-color: #66cccc;
    flex-direction: column;
}
.notbindurp{
    width: 100%;
    height: 60rpx;
    justify-content: space-between;
    background: #66cccc;
    align-items: center;
    padding: 0 50rpx;
}
.notbindurp>.a{
    font-size: 25rpx;
    color: #ffffff;
}
.notbindurp>.b{
    font-size: 20rpx;
    color: #ffffff;
    width: 120rpx;
    height: 34rpx;
    border-radius: 15rpx;
    border: 1px solid #fff;
    justify-content: center;
    align-items: center;
}
.userinfo{
    width: 100%;
    height: 400rpx;
    align-items: center;
    justify-content: flex-end;
}
.avatar-c,.info-c{
    width: 250rpx;
    height: inherit;
}
.avatar-c{
    justify-content: center;
    align-items: center;
}
.avatar{
    margin-top: -40rpx;
    width: 120rpx;
    height: 120rpx;
}
.info-c{
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-end;
    padding-bottom: 40rpx;
}
.info-c>text{
    font-size: 30rpx;
    margin-right: 40rpx;
    color: #fff;
    width: 100rpx;
}
.function-c{
    width: 100%;
    flex-wrap: wrap;
}
.function{
    width: 250rpx;
    height: 250rpx;
    align-items: center;
    justify-content: center;
    border-width: 0px;
    color: #66cccc;
    flex-direction: column;
}
.unbindurp{
    color: darkgrey;
}
.function>i{
    font-size: 80rpx;
    text-shadow: inherit;
    
}
.function-c>.kechengbiao{
    order: 1;
}
.function-c>.chengjidan{
    order: 2;
}
.function-c>.yikatong{
    order: 3;
}
.function-c>.xiaoli{
    order: 4;
}
.function-c>.gerenzhongxin{
    order: 5;
}
.function-c>.tongxunlu{
    order: 6;
}
.function-c>.guanwangxinwen{
    order: 7;
}
.function-c>.fanganwanchengdu{
    order: 8;
}
.function-c>.kaoshianpai{
    order: 9;
}
.function>.icon-xiaoyuanyiqiatong{
    font-weight: 100;
}
.function>text{
    font-size: 25rpx;
    color: inherit;
    font-weight: 300;
    margin-top: 10rpx;
    text-shadow: inherit
    
}
.function-hover{
    text-shadow: 0px 0px 1rpx #aae7e7;
}
