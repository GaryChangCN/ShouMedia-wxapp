@import './utils/iconfont.wxss';
view,
navigator {
    display: flex;
}

text,
input,
.placeholder,
button,
view {
    font-family: "微软雅黑";
    box-sizing: border-box;
}

.feedback {
    width: 100%;
    height: 70rpx;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    color: #66cccc;
}

.feedback>text {
    margin-right: 10rpx;
}

.feedback>navigator {
    margin-left: 10rpx;
    text-decoration: underline;
}

.placeholderer{
    width: 100%;
    height: 1100rpx;
    color: #66cccc;
    font-size: 30rpx;
    align-items: center;
    justify-content: center;
    display: flex;
}

.refresh {
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
    color: #2b6071;
    width: 80rpx;
    height: 80rpx;
    align-items: center;
    justify-content: center;
    border-radius: 25rpx;
    background: #fff;
    opacity: 0.5;
    display: flex;
}

.refresh>.iconfont {
    font-size: 50rpx;
    opacity: 1;
}