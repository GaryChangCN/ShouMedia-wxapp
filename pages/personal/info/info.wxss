.info-c{
	width: 100%;
	flex-direction: column;
}
.info-control{
	width: 100%;
	height: 80rpx;
	align-items: center;
	justify-content: flex-end;
	border-bottom: 1px solid #66cccc;
	padding-right: 40rpx;
}

.info-control .iconfont{
	font-size: 50rpx;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
	color: #66cccc;
}
.info-content .icon-yincang{
	font-size: 55rpx;
}
.info-content{
	width: 100%;
	flex-direction: column;
}
.info-content .item{
	width: 100%;
	justify-content: space-between;
	height: 70rpx;
	align-items: center;
	padding-left: 60rpx;
	border-bottom: 1px solid lightgrey;
}

.info-content .item .key{
	width: 200rpx;
	justify-content: flex-start;
	font-size: 25rpx;
}
.info-content .item .value{
	width: 400rpx;
	justify-content: flex-start;
	font-size: 25rpx;
}